extends ../../layouts/default.pug 
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    h1(class="mb-4") Sửa thông tin cá nhân
    +alert-success(3000)
    +alert-error(3000)
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        id="form-update-user"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullname") Tên đầy đủ
            input(
                type="text"
                class="form-control"
                id="fullname"
                name="fullname"
                value=user.fullname
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                value=user.email            
            )
        div(class="form-group")
            label(for="phone") Điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            ) 
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            ) 
        div(
            class="form-group"
            upload-image
        )
            label(for="avartar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avartar"
                name="avartar"
                accept="image/*"
                upload-image-input
            ) 
            img(
                src=user.avartar
                upload-image-preview
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(user.status ==="active")
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked=(user.status ==="inactive")
            )
            label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Save

                
        

    script(src="/admin/js/script.js")
