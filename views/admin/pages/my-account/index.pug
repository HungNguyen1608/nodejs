extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(3000)
    +alert-error(3000)
    h1(class="mb-4") Thông tin cá nhân
    if(user.fullname)
        div(class="mb-4") Tên đầy đủ: <b> #{user.fullname} </b>
    if(user.email)
        div(class="mb-4") Email: <b> #{user.email} </b>
    if(user.phone)
        div(class="mb-4") Điện thoại: <b> #{user.phone} </b>
    if(user.avartar)
        div(class="mb-4") Ảnh đại diện:
            img(
                src=user.avartar style="width:100px"
            )
    if(user.status)
        div(class="mb-4") 
            span Trạng thái:    
                if(user.status === "active")
                    span(class="badge badge-success") Hoạt động
                else 
                    span(class="badge badge-success") Dừng hoạt động
    if(role.title)
        div(class="mb-4") Quyền: <b> #{role.title} </b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-warning"
    ) Chỉnh sửa thông tin
