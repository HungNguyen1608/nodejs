extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")

                .inner-body(my-id=user.id) 
                    each chat in chats
                        div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                            if(chat.user_id != user.id)
                                .inner-name #{chat.infoUser.fullname}
                            if(chat.content)
                                .inner-content #{chat.content}
                            if(chat.images)
                                .inner-images 
                                    each image in chat.images 
                                        img(src=image)
                    div(class="inner-list-typing")
                .inner-preview-images 
                    div(
                            class="custom-file-container" 
                            data-upload-id="upload-file"
                        )
                .inner-foot 
                    form.inner-form(action="")
                        input.inner-input(
                            type="text"
                            placeholder="Nhập nội dung..."
                            name="content"
                        )
                        span.button-icon.btn.btn-light.mx-2
                            i.fa-solid.fa-face-smile
                        label.button-icon.btn.btn-light.mx-2.mb-0(for="file-upload-with-preview-upload-file")
                            i.fa-regular.fa-image
                        
                        button.inner-button(type="submit")
                            i.fa-solid.fa-paper-plane

                    // Tooltip emoji
                    div.tooltip(role="tooltip")
                        emoji-picker.light
