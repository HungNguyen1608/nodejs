extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")

                .inner-body(my-id=user.id) 
                    each chat in chats
                        div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                            if(chat.user_id != user.id)
                                .inner-name #{chat.infoUser.fullname}
                            .inner-content #{chat.content}
                    div(class="inner-list-typing")
                        div(class="box-typing")
                            div(class="inner-name") Lê Văn A 
                            div(class="inner-dots")
                                span 
                                span 
                                span
                        div(class="box-typing")
                            div(class="inner-name") Lê Văn B
                            div(class="inner-dots")
                                span 
                                span 
                                span
                .inner-foot 
                    form.inner-form(action="")
                        input.inner-input(
                            type="text"
                            placeholder="Nhập nội dung..."
                            name="content"
                        )
                        span.button-icon.btn.btn-light.mx-2
                            i.fa-solid.fa-face-smile
                        
                        button.inner-button(type="submit")
                            i.fa-solid.fa-paper-plane

                    // Tooltip emoji
                    div.tooltip(role="tooltip")
                        emoji-picker.light
