extends ../../layouts/default.pug 
include ../../mixins/alert.pug
block main 
    +alert-success(3000)
    .product-detail
        .container.my-5
            .row 
                .col-6
                    .inner-thumb 
                        img(src=product.thumbnail, alt = product.title)
                .col-6 
                    h1(class="inner-title") #{product.title}

                    if(product.category)
                        div(class="inner-category")
                            span Danh mục: 
                            a(href=`/products/${product.category.slug}`) #{product.category.title}
                    if(product.price)
                        dv(class="inner-price-new") Giá: <b> #{product.price} </b>
                    if(product.discountPercentage)
                        div(class="inner-percent") Giảm tới: <span> #{product.discountPercentage}% </span>
                    if(product.stock)
                        div(class="inner-stock") Còn lại: <span> #{product.stock} </span>
    
                   
                    form(action=`/cart/add/${product.id}` method="POST")
                        input(
                            class="form-control mb-2"
                            type="number"
                            value="1"
                            name="quantity"
                            min="1"
                            max=product.stock
                        )
                        button(class="btn btn-success form-control mb-2" type="submmit") Thêm vào giỏ hàng
                    
                .row 
                    .col-12 
                        h1(class="description-title") Chi tiết sản phẩm
                        div(class="description-detail") !{product.description}
