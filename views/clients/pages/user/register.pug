extends ../../layouts/default.pug
include ../../mixins/alert.pug 

block main 
    +alert-error(3000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đăng ký tài khoản
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullname") Tên
                        input(
                            type="fullname"
                            class="form-control"
                            id="fullname"
                            name="fullname"
                            required 
                        )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                        )
                    div(class="form-group")
                        button(
                            class="btn btn-primary form-control"
                            type="submit"
                        ) Đăng ký
                    